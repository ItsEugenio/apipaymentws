{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "rootDir": ".",
    "strict": false,
    "noEmit": false,
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "outDir": "./dist"
  },
  "include": [
    "src/**/**/**.ts",
    "tests/**/**.ts",
    "playground/**/**.ts",
  ],
  "exclude": ["node_modules"]
}
